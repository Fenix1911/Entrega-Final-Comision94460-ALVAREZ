<h1>Productos</h1>

<ul>
    {{#each products}}
        <li>
            <strong>{{this.title}}</strong> - ${{this.price}}

            <a href="/products/{{this._id}}">Ver detalle</a>

            <form action="/api/carts/{{../cartId}}/products/{{this._id}}" method="post">
                <button type="submit">Agregar al carrito</button>
            </form>
        </li>
    {{/each}}
</ul>

